<div id="login-page">
    <div class="container">
        <form method="post" class="form-login">
            <div class="login-wrap">
                <h1 class="form-login-heading">Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% else %}
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       required autofocus>

                    <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <div style="" class="g-recaptcha" data-sitekey="6LfU0Y8aAAAAAJbmpXeqlqLVq5r3X3aYxy-Nvxcb"></div>

                    <span class="pull-right"><a data-toggle="modal" href="{{ asset('reset-password') }}"> Forgot Password?</a></span>

                <br>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-theme btn-block" style="margin-bottom: 5%" type="submit">
                    Sign in
                </button>
                {% endif %}
            </div>
        </form>

    </div>
</div>

<!-- js placed at the end of the document so the pages load faster -->
