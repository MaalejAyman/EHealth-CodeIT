<div id="login-page">
    <div class="container">
        <form method="post" class="form-login">
            <div class="login-wrap">
                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <h3>Reinitialiser votre mot de passe</h3>

                {{ form_start(requestForm,{'attr':{'class':'form-control'}}) }}
                {{ form_row(requestForm.email,{'attr':{'class':'form-control'}}) }}
                <div>
                    <small>
                        saisissez votre email pour obtenir un mail de reinistialisation de mot de passe
                    </small>

                </div>

                <button class="btn btn-primary">Recevoir un mail</button>
                {{ form_end(requestForm) }}
            </div>
        </form>

    </div>
</div>

