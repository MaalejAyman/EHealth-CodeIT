{% extends 'tempClient/baseP.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ patient.roles ? patient.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ patient.password }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ patient.Adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ patient.Ville }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ patient.Tel }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ patient.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ patient.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ patient.prenom }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ patient.cin }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ patient.sexe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('patient_index') }}">back to list</a>

    <a href="{{ path('patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('Patient/_delete_form.html.twig') }}
{% endblock %}
