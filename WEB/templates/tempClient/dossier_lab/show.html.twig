{% extends 'tempClient/Laboratoire/acceuilLab.html.twig' %}
{% block content %}
    <section id="home">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="row homeCustom">
                    <div class="caption">
                        <div class="container">
                            <div class="col-md-12 col-sm-12 center-block" >
                                <div class="col-md-6 col-sm-12 center-block" style="width: 100%;margin-bottom: 5%">
                                    <a href="{{ path('dossier_lab_new') }}" id="index">
                                        <button class="btn btn-warning form-control" >Cr√©er un nouveau Dossier</button>
                                    </a>
                                </div>
                            </div>
                            <br>
                                <table class="table table-hover" style="color:black;background-color: white ; border-radius: 2%">
                                    <thead>
                                    <tr>
                                        <th> Dossiers</th>
                                        <th> </th>
                                    </tr>
                                    </thead>
                                    {% for i  in dossier %}
                                        <tr>
                                            <td> {{ i.Patient }}</td>
                                            <td>
                                                <a href="{{ path('showAn',{'id':i.id}) }}">
                                                    <button class="btn btn-primary btn-xs">
                                                        <i class="fa fa-files-o"></i>
                                                    </button>
                                                </a>
                                                <a href="{{ path('dossier_lab_delete',{'id':i.id}) }}">

                                                    <button class="btn btn-danger btn-xs">
                                                        <i class="fa fa-trash-o"></i>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="15">Pas de dossier</td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}