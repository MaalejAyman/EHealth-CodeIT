{% extends '/tempClient/Medecin/acceuilMed.html.twig' %}

{% block title %}Dossier index{% endblock %}

{% block content %}
    <section id="home">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="row homeCustom">
                    <div class="caption">
                        <div class="container">
                            <h2> Liste des dossiers</h2>
                            <a href="{{ path('dossier_new') }}">
                                <button class="btn btn-theme04 " style="margin-bottom: 2%"> Creer un nouveau dossier
                                </button>
                            </a>
                            <table class="table table-striped table-advance table-hover"
                                   style="background-color: white">
                                <tr>
                                    <th class="text-center text-muted">Patient</th>
                                    <th class="text-center text-muted">Date de creation</th>
                                    <th class="text-center text-muted"></th>

                                </tr>

                                {% for dossier in dossiers %}
                                    <tr>
                                        <td class="text-center text-muted">{{ dossier.patient }}</td>
                                        <td class="text-center text-muted">{{ dossier.datecreation|date('Y-M-j') }}</td>

                                        <td class="text-center text-muted">
                                            <a href="{{ path('dossier_show', {'id': dossier.id}) }}">
                                                <button class=" btn btn-theme start "> Afficher le dossier</button>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="2">Pas de dossier</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
