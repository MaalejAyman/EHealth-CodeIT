{% extends '/tempClient/patient/Acceuil.html.twig' %}


{% block content %}


    <section id="home">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="row homeCustom">
                    <div class="caption">
                        <div class="container">
                            <h2> Mes Questions</h2>
                            {% if not (patient) %}
                                <div class="row">
                                    <a href="{{ path('poserQuestion') }}" style="width: 100% ;margin-bottom: 2%">
                                        <button class="btn btn-warning" style="width: 100% ;margin-bottom: 2%">Poser une
                                            question
                                        </button>
                                    </a>
                                </div>

                            {% else %}
                                <div class="btn btn-danger btn-xs">
                                    <h1> Vous êtes bloqué vous ne pouvez plus poser des questions </h1>
                                    <h3> Veuillez contacter l'administrateur: ehealthcodeit@gmail.com</h3>
                                </div>

                            {% endif %}


                            <table class="table table-striped table-advance table-hover"
                                   style="background-color: white">
                                <tr>
                                    <th class="text-center text-muted">Question</th>
                                    <th class="text-center text-muted">Mes réponses</th>
                                    <th></th>
                                </tr>

                                {% for i in listt %}
                                    <tr>
                                        <td class="text-center text-muted"> {{ i.text }}</td>
                                        <td class="text-center "><a href="{{ path('ListerReponses',{'id':i.id}) }}">
                                                <button class="btn btn-theme02">
                                                    Voir reponses
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('modifierQuestion',{'id':i.id}) }}">
                                                <button class="btn btn-success btn-xs">
                                                    <i class="fa fa-pencil"></i>
                                                </button>
                                                </buton>
                                            </a>
                                            <a href="{{ path('supprimerQuestion',{'id':i.id}) }}">
                                                <button class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash-o"></i>
                                                </button>
                                            </a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td colspan="3">
                                        <div class="navigation" style="align-content: center;color: black">
                                            {{ knp_pagination_render(listt) }}
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            {% if question %}


                            <h2> Les réponses effectuées</h2>
                            <div class="row">
                                <div class="col-md-12">

                                    <hr>
                                    <table class="table table-striped table-hover"
                                           style="background-color: white">

                                        <tr>
                                            <th class="text-center text-muted"> Question</th>
                                            <th class="text-center text-muted"> Reponse</th>

                                        </tr>

                                        <tr>
                                            <td class="text-center text-muted">{{ question.text }}  </td>
                                            <td></td>
                                        </tr>
                                        {% for reponse in question.reponses %}

                                            <tr>
                                                <td></td>

                                                <td class="text-center text-muted">{{ reponse.text }}  </td>
                                            </tr>

                                        {% endfor %}

                                    </table>


                                </div>

                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}